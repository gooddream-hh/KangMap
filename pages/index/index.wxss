
/*搜索地址样式*/

/**************************************/
/*抽屉列表*/
.list-item-bd {
  top: 260rpx;
  position:fixed;
  right: 90rpx;
  width: 200rpx;
  height: 80rpx;
  /* height: 0; */
  overflow: hidden;
  z-index: 998;
}
.list-item-bd-show {
  height: auto;
}
.option-box {
  opacity: 0;
  position: relative;
  background-color: #FFFFFF;
  line-height: 1.41176471;
  font-size: 34rpx;
  border-bottom-left-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
  transform: translateY(-50%);
  transition: .3s;
}
.option-box-show {
  opacity: 1;
  transform: translateY(0);
}

.state-arrow-open {
  transform: rotate(180deg);
  transition: transform 0.3s;
}

.option {
  padding: 20rpx 20rpx;
  position: relative;
  display: flex;
  align-items: center;
  border-top: 1px solid #0c0c0c;
}
.option-text {
  flex: 1;
  font-size: 30rpx;
}
/**********************************/
/*地图表面样式*/
.top {
  width: 100%;
  height: 120rpx;
  line-height: 80rpx;
  position: fixed;
  top: 20;
  left: 0;
  padding: 30rpx 10rpx;
  z-index: 999;
  overflow: hidden;
}
.top .back {
  width: 80rpx;
  height: 80rpx;
  font-size: 50rpx;
  text-align: center;
  position: absolute;
  top: 0;
  left: 0;
}
.search-box {
  width: 610rpx;
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  align-items: center;
  border-radius: 30rpx;
  background: rgb(255,255,255);
  margin-left: 40rpx;
  float: left;
  overflow: hidden;
}
.search-box1 {
  border: 1px solid #ccc;
  border-radius: 10rpx;
  background: #eee;
}
.search-box .region {
  width: 199rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  color: #282828;
  text-align: center;
  float: left;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.search-box .shu {
  width: 1rpx;
  height: 80rpx;
  background: #000000;
  float: left;
}
.search-box input {
  width: 380rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  color: #282828;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  float: left;
}
.search-box .name-btn{
  width: 150rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  color: #282828;
  text-align: center;
  float: left;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.search-box .placeholder{
  width: 380rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  color: #ccc;
  padding: 0 20rpx;
  box-sizing: border-box;
  float: left;
}
